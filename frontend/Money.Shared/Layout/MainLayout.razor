@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_appSettings.IsDarkMode" @ref="@_mudThemeProvider" Theme="_defaultTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Class="docs-appbar-filter mud-appbar mud-appbar-fixed-top mud-elevation-0 mud-theme-transparent">
        <MudIconButton Color="Color.Inherit" Edge="Edge.Start" Icon="@Icons.Material.Filled.Menu" OnClick="ToggleDrawer" />
        <MudSpacer />
        <DarkModeToggle @ref="_darkModeToggle" AppSettings="_appSettings" />
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudStack AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Row Spacing="3">
                <MudImage Height="64" Src="./icon-192.png" />
                <MudText Typo="Typo.h5">Филочки</MudText>
            </MudStack>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Gutters MaxWidth="MaxWidth.Large">
            <CascadingValue Value="_appSettings">
                <CascadingValue Value="_darkModeToggle">
                    @Body
                </CascadingValue>
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>
